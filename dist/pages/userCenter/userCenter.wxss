/* userCenter.wxss  */
page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 40rpx;
}
.info-component {
  width: auto;
  display: inline-block;
}
.info-component .userinfo {
  margin-top: 20rpx;
  height: 350rpx;
  width: 100%;
  background: #FFF;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  align-items: center;
  border-left: none;
  border-right: none;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  position: absolute;
}
.info-component .userinfo-avatar {
  align-items: center;
  position: absolute;
  top: 10%;
  margin-right: auto;
  margin-left: auto;
}
.info-component .userinfo-nickname {
  font-size: 32rpx;
  position: absolute;
  text-align: center;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 50%;
  color: #030e1b;
}
.info-component .userinfo-tip {
  color: #11040470;
  font-size: 28rpx;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 65%;
}
.info-component .userinfo-pencil {
  position: absolute;
  left: 20%;
  top: 60%;
}
.asked {
  top: 40%;
  width: 100%;
  position: absolute;
  background: #FFF;
}
.show {
  display: block;
}
.hide {
  display: none;
}