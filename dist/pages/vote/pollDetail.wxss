.options-list {
  width: 100%;
  margin-bottom: 18rpx;
}
.option-li {
  width: 100%;
  border: 1rpx solid #dcdcdc;
  border-radius: 40rpx;
  margin-bottom: 10rpx;
  display: flex;
  position: relative;
  overflow: hidden;
}
.option-content-wrapper {
  min-height: 44rpx;
  padding: 4rpx 13rpx;
  position: relative;
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
}
.percentage-bar {
  height: 58rpx;
  width: 13.97%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.desc {
  font-size: 50rpx;
  color: #212121;
  order: -1;
  z-index: 2;
}
.vote-percentage {
  color: #757575;
  font-size: 50rpx;
  z-index: 1;
}
.show {
  display: block;
}
.unselected {
  background-color: rgba(232, 237, 244, 0.9);
}
.selected {
  background-color: lightcoral;
}
.hide {
  display: none;
}