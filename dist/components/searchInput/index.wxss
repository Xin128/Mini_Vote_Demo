.search-component {
  width: auto;
  display: inline-block;
}
.search-component .search-input,
.search-component .search-mask-input {
  width: 590rpx;
  height: 70rpx;
  margin: 15rpx 0 10rpx 15rpx;
  display: inline-block;
  vertical-align: middle;
  background: #f6f6f6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 70rpx;
  color: #cdcdcd;
}
.search-component .search-input .search-input-icon,
.search-component .search-mask-input .search-input-icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.search-component .search-mask {
  position: fixed;
  display: none;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background: #fff;
}
.search-component .search-mask .search-input-wrap {
  position: relative;
}
.search-component .search-mask .search-input-wrap .search-mask-icon {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 30rpx;
  left: 35rpx;
}
.search-component .search-mask .search-input-wrap .search-mask-input {
  text-align: left;
  padding-left: 60rpx;
  color: #000;
  caret-color: #1e8ae8;
}
.search-component .search-mask .search-input-wrap .search-mask-cancel {
  font-size: 28rpx;
  color: #1e8ae8;
  margin-left: 16rpx;
}
.search-component .search-mask .search-history {
  width: 1500rpx;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx;
}
.search-component .search-mask .search-history .search-history-title {
  color: #323233;
  font-size: 30rpx;
}
.search-component .search-mask .search-history .search-item,
.search-component .search-mask .search-history .search-clear-all {
  width: 670rpx;
  padding: 20rpx 10rpx;
  margin-right: 10rpx;
  border-bottom: 1rpx solid #f6f6f6;
}
.search-component .search-mask .search-history .search-item .search-icon-time,
.search-component .search-mask .search-history .search-item .search-icon-del,
.search-component .search-mask .search-history .search-item .search-del-all,
.search-component .search-mask .search-history .search-clear-all .search-icon-time,
.search-component .search-mask .search-history .search-clear-all .search-icon-del,
.search-component .search-mask .search-history .search-clear-all .search-del-all {
  width: 30rpx;
  height: 30rpx;
}
.search-component .search-mask .search-history .search-item .search-icon-time,
.search-component .search-mask .search-history .search-item .search-icon-del,
.search-component .search-mask .search-history .search-item .search-item-text,
.search-component .search-mask .search-history .search-item .search-del-all,
.search-component .search-mask .search-history .search-clear-all .search-icon-time,
.search-component .search-mask .search-history .search-clear-all .search-icon-del,
.search-component .search-mask .search-history .search-clear-all .search-item-text,
.search-component .search-mask .search-history .search-clear-all .search-del-all {
  display: inline-block;
  vertical-align: middle;
}
.search-component .search-mask .search-history .search-item .search-icon-time,
.search-component .search-mask .search-history .search-item .search-del-all,
.search-component .search-mask .search-history .search-clear-all .search-icon-time,
.search-component .search-mask .search-history .search-clear-all .search-del-all {
  margin-right: 20rpx;
}
.search-component .search-mask .search-history .search-item .search-icon-del,
.search-component .search-mask .search-history .search-clear-all .search-icon-del {
  float: right;
  margin-top: 10rpx;
}
.search-component .show {
  display: block;
}
.search-component .hide {
  display: none;
}